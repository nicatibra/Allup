@using AllupPraktika.ViewModels.Basket
@model List<BasketItemVM>
@{
    decimal total = 0;
}

<section class="cart-page pt-10">
    <div class="container-fluid custom-container">
        <div class="row">
            <div class="col-xl-8">
                <div class="shopping-cart mt-25">
                    <h4 class="allup-title">Shopping Cart</h4>

                    <div class="shopping-cart-table table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="image">Image</th>
                                    <th class="product">Product</th>
                                    <th class="price">Price</th>
                                    <th class="quantity">Quantity</th>
                                    <th class="total">SubTotal</th>
                                    <th class="delete">Delete</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (BasketItemVM itemVM in Model)
                                {
                                    total += itemVM.SubTotal;

                                    <tr>
                                        <td>
                                            <div class="product-image">
                                                <img src="~/assets/images/@itemVM.Image" alt="cart">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-title">
                                                <h4 class="title"><a asp-controller="shop" asp-action="detail" asp-route-id="@itemVM.Id">@itemVM.Name</a></h4>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-price">
                                                <span class="price">€@itemVM.Price</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-quantity">
                                                <div class="quantity mt-15 d-flex">
                                                    <button type="button" class="sub"><i class="fal fa-minus"></i></button>
                                                    <input type="text" value="@itemVM.Count" />
                                                    <button type="button" class="add"><i class="fal fa-plus"></i></button>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-total">
                                                <span class="total-amount">€@itemVM.SubTotal</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-delete">
                                                <a asp-controller="basket" asp-action="RemoveBasketItemFromBasket" asp-route-id="@itemVM.Id"><i class="fal fa-trash-alt"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="cart-btn text-right">
                        <a class="main-btn" href="#">Update cart</a>
                    </div>
                </div>

            </div>

           

            <div class="col-xl-4">
                <br>
                <br>
                

                <div class="row">
                    <div class="col-xl-12 col-md-6">
                        <div class="cart-coupon mt-30">
                            <h5 class="title">Discount Coupon Code</h5>
                            <form action="#">
                                <div class="single-form coupon-form d-flex flex-wrap">
                                    <input type="text" placeholder="Coupon Code">
                                    <button class="main-btn">Apply Coupon</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-xl-12 col-md-6">
                        <div class="cart-total mt-30">

                            <div class="sub-total">
                                <div class="single-total">
                                    <span class="cart-value">Cart Total</span>
                                    <span class="cart-amount">€@total</span>
                                </div>
                            </div>

                            <div class="cart-total-btn text-right">
                                <a class="main-btn" asp-controller="basket" asp-action="checkout">Proceed to Checkout</a>
                            </div>
                        </div>
                    </div>
                    



                </div>

                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>

            </div>
        </div>
    </div>
</section>

