@model LoginVM

<section class="login-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">Login to Your Account</h4>
                    <form method="post">

                        <div class="text-danger" asp-validation-summary="ModelOnly">
                        </div>

                        <div class="single-form">
                            <input asp-for="UsernameOrEmail" placeholder="Username or email">
                            <span asp-validation-for="UsernameOrEmail" class="text-danger"> </span>
                        </div>

                        <div class="single-form">
                            <input asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"> </span>
                        </div>



                        <div class="custom-checkbox mt-30">
                            <input asp-for="IsPersistent" id="account">
                            <label for="account"></label>
                            <p>Remember me</p>
                        </div>

                        <div class="single-form">
                            <button type="submit" asp-controller="account" asp-action="login"  class="main-btn main-btn-2">Login</button>
                        </div>

                        <div class="single-form">
                            <button class="main-btn main-btn-2"><a asp-controller="home" asp-action="index">Cancel</a></button>
                        </div>

                    </form>
                    <p class="mt-20"><a href="#">Lost your password?</a></p>
                    <p class="mt-10">No account? <a asp-controller="account" asp-action="register">Create one here.</a></p>
                </div>
            </div>
        </div>
    </div>
</section>